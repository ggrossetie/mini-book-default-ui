{{#with (downloadable-assets)}}
  {{#if this.length}}
    <div class="downloadable-assets">
      <span class="title">{{or ../page.attributes.downloadable-asset-title 'Download as'}}</span>
      <ul>
        {{#each this}}
          <li class="downloadable-asset"><a href="{{this.href}}" class="button">{{{resolve-asset-icon this}}}{{this.title}}</a></li>
        {{/each}}
      </ul>
    </div>
  {{/if}}
{{/with}}
